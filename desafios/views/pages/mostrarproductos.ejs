<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <title>Galeria de Productos EJS</title>
  </head>

  <body class="container">
    <div class="container bg-light p-4 my-1 mx-auto">
      <h1 class="text-primary mb-5">Vista de productos</h1>

      <% if(productos.length !==0){ %>

      <table class="table">
        <thead >
          <tr class="table-dark">
            <th class="col-6">Nombre</th>
            <th class="col-3">Precio</th>
            <th class="col-3">Foto</th>
          </tr>
        </thead>
        <tbody>
          <% productos.forEach((producto)=>{ %>

          <tr class="table-dark align-middle">
            <td><%= producto.title %></td>
            <td><%= producto.price %></td>
            <td>
              <img src=<%=producto.thumbnail%> style="height: 32px;" alt="imagen de producto"/>
            </td>
          </tr>

          <%});%>
        </tbody>
      </table>

      <% }else{ %>

      <div class="p-3 mb-4">
        <h3 class="alert alert-warning" role="alert">No se encontraron productos</h3>
      </div>

      <% } %>

      <a class="btn btn-primary" href="/" role="button">Volver al formulario</a>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
