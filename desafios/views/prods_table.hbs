
  <h1 class="table_title mb-5">Vista de productos</h1>

  {{#if emptyProds}}
  <table id="prodTable" class="table table-striped table-hover">
    <thead>
      <tr class="table-dark">

        <th scope="col-4">Name</th>
        <th scope="col-4">Price</th>
        <th scope="col-4">Photo URL</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr class="table-dark align-middle">
          <td>{{title}}</td>
          <td>{{price}}</td>
          <td>
            <img src={{thumbnail}} style="height: 32px;" alt="imagen de producto"/>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
    <div class="p-3 mb-4">
      <h3 class="alert alert-warning" role="alert">No se encontraron productos</h3>
    </div>
  {{/if}}
